    <script src="js/btn.js"></script>
    <script>
      const dayid = document.getElementById("day");
      const timeid = document.getElementById("today_date");
      const DAY = () => {
               var currenttime = new Date();
               var weekday = new Array(7);
               weekday[0] = "Sunday";
               weekday[1] = "Monday";
               weekday[2] = "Tuesday";
               weekday[3] = "Wednesday"; 
               weekday[4] = "Thrusday";
               weekday[5] = "Friday";
               weekday[6] = "Saturday";

               var day = weekday[currenttime.getDay()];
               dayid.innerText = day;
           };
           DAY();

           const TIME = () => {
               var realtime = new Date();
               var date = realtime.getDate();

               var months = new Array(12);
               var months = ["JAN","FEB","MAR","APR","MAY","JUN","JUL","AUG","SEP","OCT","NOV","DEC"];
               var monthname = months[realtime.getMonth()];

               var hour = realtime.getHours();
               var minute = realtime.getMinutes();

               let period = "AM";
               if(hour>11)
               {
                   period = "PM";
               }
               if(hour>12)
               {
                  hour = hour-12;
               }
               if(minute<10)
               {
                  minute = "0" + minute;
               }
            timeid.innerText = `${date}th  ${monthname}`;
           };
           TIME();
    </script>
  </body>
