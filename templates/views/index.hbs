<html lang="en">
  <head>
    {{>headerlink}}
  </head>
  <body>
    {{>navbar}}
    <!-- navbar ends here & main header starts -->
    <div class="container-fluid main_header">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <div class="row">
            <!-- left-side div -->
            <div class="col-md-6 col-12 main_header_left">
              <h1 class="main_heading"></h1>
              <p>Welcome to Weather World.....‚õ±Ô∏è</p>
              <h1>
                Get the latest info. of
                <span class="text_clr">weather</span>
                in your city....üòç
              </h1>
              <a href="/weather"><button>Check Now</button></a>
            </div>
            <!-- right-side div  -->
            <div class="col-md-6 col-12 main_header_right">
              <div
                id="carouselExampleControls"
                class="carousel slide"
                data-ride="carousel"
              >
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img class="w-100" src="images/bg1.png" alt="First slide" />
                  </div>
                  <div class="carousel-item">
                    <img
                      class="w-100"
                      src="images/bg2.png"
                      alt="Second slide"
                    />
                  </div>
                  <div class="carousel-item">
                    <img class="w-100" src="images/bg3.png" alt="Third slide" />
                  </div>
                </div>
                <a
                  class="carousel-control-prev"
                  href="#carouselExampleControls"
                  role="button"
                  data-slide="prev"
                >
                  <span
                    class="carousel-control-prev-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a
                  class="carousel-control-next"
                  href="#carouselExampleControls"
                  role="button"
                  data-slide="next"
                >
                  <span
                    class="carousel-control-next-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- footer part -->
    {{>footer}}

    <script src="js/main.js"></script>
  </body>
</html>